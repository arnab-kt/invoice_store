<div class="mb-4 mt-2 clearfix">
  <h3 class="d-inline-block mb-0">Currencies</h3>
  <%= link_to '<i class="fas fa-plus"></i> Add new currency'.html_safe, new_admin_currency_path, data: { remote: true, toggle: "modal", target: "#currency_form_modal" }, class: "float-right btn btn-primary", title: "Add new currency" %>
</div>

<div class="table-responsive currency-list">
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Code</th>
        <th scope="col">Symbol</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @currencies.each.with_index(1) do |currency, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= currency.name %></td>
          <td><%= currency.code %></td>
          <td><%= currency.symbol %></td>
          <td><%= currency.active ? '<i class="far fa-check-circle" title="Active"></i>'.html_safe : '<i class="far fa-times-circle" title="Deactive"></i>'.html_safe %></td>
          <td>
            <%= link_to '<i class="fas fa-pencil-alt"></i>'.html_safe, edit_admin_currency_path(currency), data: { remote: true, toggle: "modal", target: "#currency_form_modal" }, class: "mr-2", title: "Edit" %>
            <%= delete_link admin_currency_path(currency), class_name="ml-2" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "layouts/pagy" %>

<!-- DIV for Bootstrap Modal -->
<div class="modal fade" id="currency_form_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <!-- bootstrap modal content goes here -->
    </div>
  </div>
</div>
