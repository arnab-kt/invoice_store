<%= form_for [:admin, @country] do |f| %>
  <%= render partial: "layouts/form_errors", locals: { model: @country } %>
  <div class="form-group form-inline">
    <%= f.label :name, "Name", class: "control-label col-sm-3" %>
    <%= f.text_field :name, placeholder: "Enter name", required: true, class: "form-control" %>
  </div>
  <div class="form-group form-inline">
    <%= f.label :code, "Code", class: "control-label col-sm-3" %>
    <%= f.text_field :code, placeholder: "Enter country code", pattern:"[a-zA-Z]{2,2}", required: true, class: "form-control" %>
  </div>
  <div class="form-group form-inline">
    <%= f.label :active, "Active", class: "control-label col-sm-3" %>
    <%= f.select :active, ["true", "false"],  class: "form-control" %>
  </div>
  <div class="text-center">
    <%= f.submit class: "btn btn-success", disabled_with: "Saving..." %>
  </div>
<% end %>
