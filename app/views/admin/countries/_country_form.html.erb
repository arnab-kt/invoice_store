<%= form_for @country do |f| %>

  <% if @country.errors.any? %>
    <% count = 1%>
    <% @country.errors.full_messages.each do |msg| %>
      <p class="text-danger"><%= count%>. <%= msg %></p>
      <% count +=1 %>
    <% end %>
  <% end %>

  <div class="form-group form-inline">
    <%= f.label :name, "Name", class: "control-label col-sm-3" %>
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>
  <div class="form-group form-inline">
    <%= f.label :code, "Code", class: "control-label col-sm-3" %>
    <%= f.number_field :code, required: true, class: "form-control", step: 1 %>
  </div>
    <div class="form-group form-inline">
    <%= f.label :active, "Active", class: "control-label col-sm-3" %>
    <%= f.select :active, ["true", "false"], { required: true },  class: "form-control" %>
  </div>
  <div>
    <%= f.submit class: "btn btn-success", disabled_with: "Saving..." %>
  </div>

<% end %>