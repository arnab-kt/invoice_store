<% if flash.present? %>
  <div class = "alert-box mt-3">
    <% flash.each do |key, value|%>
      <div class="alert alert-<%= key %> alert-dismissible fade show">
        <strong><%= value %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
