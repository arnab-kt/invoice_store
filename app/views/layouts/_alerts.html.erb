<% flash.each do |key, value|%>
  <div class="alert alert-<%= key %> alert-dismissible fade show mt-3 mb-2">
    <strong><%= value %></strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
